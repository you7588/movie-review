<div class="col-md-12">
  <div class="group">

    <span class="pull-right">
      <% if current_user && current_user.is_member_of?(@group) %>
        <%= link_to("Remove", quit_group_path(@group), method: :post, class: "btn btn-pull-right") %>
        <label class="label label-success"> From My Favorites </tabel>

          <% else %>
        <%= link_to("Add", join_group_path(@group), method: :post, class: "btn btn-pull-right") %>
        <label class="label label-warning"> to My Favorites </label>
          <% end %>
    </span>
    <%= link_to("Write a Post", new_group_post_path(@group), class: "btn btn-link pull-right")%>
    <% if current_user && current_user == @group.user %>
    <%= link_to("Edit", edit_group_path(@group), class: "btn btn-primary pull-right")%>
<% end %>
  </div>
  <h2><%= @group.title %></h2>
  <p><%= @group.description %></p>

  <table class="table">
    <thead>
      <tr>
         <th> Comments </th>
         <th> Creator </th>
         <th> Last Update </th>
       </tr>
     </thead>
     <tbody>
       <% @posts.each do |post| %>
         <tr>
           <td><%= post.content %></td>
           <td><%= post.user.email %></td>
           <td><%= post.created_at %></td>
         </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= will_paginate @posts %>
  </div>

</div>
